# ===========================================
# HD APP - PRODUCTION ENVIRONMENT CONFIG
# ===========================================

# Application Configuration
NODE_ENV=production
PORT=4001

# Database Configuration
MONGO_URI=mongodb://mongo:27017/hdapp
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongo-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# API Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com:4001
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Grafana Cloud Stack Configuration
GRAFANA_PROMETHEUS_USERNAME=your-prometheus-username
GRAFANA_PROMETHEUS_PASSWORD=your-prometheus-password
GRAFANA_LOKI_USERNAME=your-loki-username
GRAFANA_LOKI_PASSWORD=your-loki-password
GRAFANA_TEMPO_USERNAME=your-tempo-username
GRAFANA_TEMPO_PASSWORD=your-tempo-password

# Grafana Local Configuration
GRAFANA_PASSWORD=your-secure-grafana-password

# Email Configuration (Optional)
EMAIL_SERVICE_URL=your-email-service-url
EMAIL_API_KEY=your-email-api-key

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# Cache Configuration
REDIS_URL=redis://redis:6379
CACHE_TTL=3600

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Development/Testing (set to false in production)
DEBUG=false
VERBOSE_LOGGING=false
