# ===========================================
# HD APP - LOKALE ENTWICKLUNG (OHNE SUPABASE)
# ===========================================

# Application Configuration
NODE_ENV=development
PORT=4001

# JWT Configuration
JWT_SECRET=local-development-secret-key-for-testing-only
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4001

# Lokale Datenbank (SQLite)
DATABASE_URL=./data/local.db
USE_LOCAL_DB=true

# OpenAI Configuration (optional für lokale Entwicklung)
# NEXT_PUBLIC_OPENAI_API_KEY=your-openai-key-here

# Rate Limiting (entspannt für lokale Entwicklung)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security Configuration
BCRYPT_ROUNDS=8
SESSION_SECRET=local-session-secret

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=simple

# Monitoring Configuration
METRICS_ENABLED=false
HEALTH_CHECK_INTERVAL=30

# Performance Configuration
MAX_CONNECTIONS=50
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Development/Testing
DEBUG=true
VERBOSE_LOGGING=true

# Supabase deaktiviert für lokale Entwicklung
SUPABASE_ENABLED=false
